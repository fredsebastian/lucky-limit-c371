      margin-left: calc(-1 * ((100vw - 100%) / 2));
      background: linear-gradient(to bottom, #fdfaf7 0%, #ffffff 100%);
      padding: 1em 0;
      font-family: 'Georgia', serif;
    }

    .baking-row {
      display: flex;
      flex-wrap: nowrap;
      gap: 2em;
      max-width: 1100px;
      margin: 0 auto;
      padding: 1em 1em 1em;
      align-items: stretch;
    }

    .baking-container {
      flex: 1 1 55%;
      min-width: 300px;
      text-align: justify;
      padding: 0.8em;
      background: #fffefb;
      border-left: 4px solid #e2b88f;
      border-radius: 6px;
      box-shadow: 0 1px 6px rgba(0,0,0,0.03);
      font-size: 1.1rem;
      line-height: 1.6;
      color: #3a3a3a;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .baking-container p {
      margin-bottom: 0.6em;
    }

    .carousel-container {
      flex: 1 1 45%;
      min-width: 300px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 0.5em;
      background: #fffefb;
      border-radius: 6px;
      box-shadow: 0 1px 6px rgba(0,0,0,0.03);
      position: relative;
    }

    .carousel {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .carousel-track-wrapper { overflow: hidden; width: 100%; }
    .carousel-track {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }

    .carousel-slide {
      flex: 0 0 100%;
      max-width: 100%;
      text-align: center;
      padding: 1em;
      box-sizing: border-box;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .carousel-slide img {
      width: 100%;
      max-height: 400px;
      object-fit: contain;
      border-radius: 6px;
      margin: auto;
    }

    .caption {
      margin-top: 0.5em;
      font-size: 0.9rem;
      color: #6e6e6e;
      font-style: italic;
    }

    .carousel-btn {
      position: absolute;
      top: 45%;
      transform: translateY(-50%);
      background: rgba(0,0,0,0.4);
      border: none;
      color: white;
      font-size: 1.2rem;
      padding: 0.1em 0.3em;
      cursor: pointer;
      border-radius: 10%;
      z-index: 1;
    }

    .carousel-btn.prev { left: 0.5em; }
    .carousel-btn.next { right: 0.5em; }

    .carousel-btn:hover { background: rgba(0,0,0,0.6); }

    .baking-collage-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      grid-auto-rows: 160px;
      gap: 0.5em;
      margin: 2em auto 0;
      max-width: 1100px;
      padding: 0 1em;
      grid-auto-flow: dense;
    }

    .baking-tile {
      overflow: hidden;
      cursor: pointer;
      border-radius: 6px;
      position: relative;
    }

    .baking-tile img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
    }

    .baking-tile:hover img {
      transform: scale(1.05);
    }

    .baking-tile::after {
      content: attr(data-caption);
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      font-size: 0.8rem;
      padding: 0.4em;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
      pointer-events: none;
    }

    .baking-tile:hover::after {
      opacity: 1;
    }

    .baking-tile.wide { grid-column: span 2; }
    .baking-tile.tall { grid-row: span 2; }

    .baking-modal {
      display: none;
      position: fixed;
      z-index: 1001;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(10, 10, 10, 0.85);
      padding-top: 60px;
      text-align: center;
      animation: fadeIn 0.3s ease-in;
    }

    .baking-modal img {
      max-width: 90%;
      max-height: 80vh;
      border-radius: 6px;
      margin-bottom: 1em;
    }

    .baking-modal p {
      color: #ddd;
      font-size: 0.95rem;
      font-style: italic;
    }

    .close-btn {
      position: absolute;
      top: 1em;
      right: 1.5em;
      color: white;
      font-size: 2rem;
      cursor: pointer;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @media (max-width: 768px) {
      .baking-row {
        flex-direction: column;
        gap: 1.5em;
        padding: 1em 1em 2em;
      }

      .baking-collage-grid {
        grid-template-columns: repeat(2, 1fr);
        grid-auto-rows: 90px;
        padding: 0 0.5em;
      }

      .carousel-slide img {
        max-height: 260px;
      }

      .carousel-btn {
        font-size: 1.2rem;
        padding: 0.3em 0.5em;
      }

      .caption {
        font-size: 0.85rem;
      }
    }
  </style>

  <script is:inline>
    let currentIndex = 0;

    function showSlide(index) {
      const track = document.querySelector('#carousel-track');
      if (track) {
        track.style.transform = `translateX(-${index * 100}%)`;
      }
    }

    window.plusSlides = function (n) {
      const slides = document.querySelectorAll('.carousel-slide');
      const totalSlides = slides.length;
      currentIndex = (currentIndex + n + totalSlides) % totalSlides;
      showSlide(currentIndex);
    };

    document.addEventListener("DOMContentLoaded", () => {
      showSlide(currentIndex);

      setInterval(() => {
        window.plusSlides(1);
      }, 5000);

      document.querySelectorAll('.baking-tile').forEach(tile => {
        tile.addEventListener('click', () => {
          const modal = document.getElementById('bakingModal');
          const modalImg = document.getElementById('modalImg');
          const modalCaption = document.getElementById('modalCaption');

          modalImg.src = tile.dataset.img;
          modalCaption.textContent = tile.dataset.caption;
          modal.style.display = 'block';
        });
      });

      window.closeModal = function () {
        document.getElementById('bakingModal').style.display = 'none';
      };
    });
  </script>
</Layout>
