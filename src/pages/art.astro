  <!-- Modal -->
  <div class="art-modal" id="artModal">
    <span class="close-btn" onclick="closeModal()">×</span>
    <img id="modalImg" src="" alt="Art full view" />
    <p id="modalCaption"></p>
  </div>


<style>
  .art-full-wrap {
    width: 100vw;
    margin-left: calc(-1 * ((100vw - 100%) / 2));
    background: linear-gradient(to bottom, #fdfaf7 0%, #ffffff 100%);
    padding: 1em 0;
    font-family: 'Georgia', serif;
    margin-top: 0;        /* Ensure there's no extra top margin */
    margin-bottom: 1em; /* Reduce space below it */
  }

  .art-row {
    display: flex;
    flex-wrap: nowrap;
    gap: 2em;
    max-width: 1100px;
    margin: 0 auto;
    padding: 1em 1em 1em;
    align-items: stretch;
    align-items: stretch;
    margin-top: 0;        /* Ensure there's no extra top margin */
    margin-bottom: 1em; /* Reduce space below it */
  }

  .art-container {
    flex: 1 1 55%;
    min-width: 300px;
    text-align: justify;
    padding: 0.8em;
    background: #fffefb;
    border-left: 4px solid #e2b88f;
    border-radius: 6px;
    box-shadow: 0 1px 6px rgba(0,0,0,0.03);
    font-size: 1.2rem;
    line-height: 1.6;
    color: #3a3a3a;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-top: 0;        /* Ensure there's no extra top margin */
    margin-bottom: 0em; /* Reduce space below it */
  }

  .art-container p {
    margin-bottom: 0.6em;
  }

  .carousel-container {
    flex: 1 1 45%;
    min-width: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0.5em;
    background: #fffefb;
    border-radius: 6px;
    box-shadow: 0 1px 6px rgba(0,0,0,0.03);
    position: relative;
  }

  .carousel {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .carousel-track-wrapper {
    overflow: hidden;
    width: 100%;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .carousel-slide {
    flex: 0 0 100%;
    max-width: 100%;
    text-align: center;
    padding: 1em;
    box-sizing: border-box;
  }

  .carousel-slide img {
    width: 100%;
    max-height: 400px;
    object-fit: contain;
    border-radius: 6px;
  }

  .caption {
    margin-top: 0.5em;
    font-size: 0.9rem;
    color: #6e6e6e;
    font-style: italic;
  }

  .carousel-btn {
    position: absolute;
    top: 45%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.4);
    border: none;
    color: white;
    font-size: 1.2rem;
    padding: 0.1em 0.3em;
    cursor: pointer;
    border-radius: 10%;
    z-index: 1;
  }

  .carousel-btn.prev { left: 0.5em; }
  .carousel-btn.next { right: 0.5em; }
  .carousel-btn:hover { background: rgba(0,0,0,0.6); }

  .art-container,
  .carousel-container {
    height: 100%;
  }

  .carousel-slide {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex-grow: 1;
    height: 100%;
  }

  .carousel-slide img {
    max-height: 100%;
    object-fit: contain;
    margin: auto;
  }


  .art-collage-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    grid-auto-rows: 160px;
    gap: 0.5em;
    margin: 2em auto 0;
    max-width: 1100px;
    padding: 0 1em;
    grid-auto-flow: dense;
  }

  .art-tile {
    overflow: hidden;
    cursor: pointer;
    border-radius: 6px;
    position: relative;
  }

  .art-tile img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .art-tile:hover img {
    transform: scale(1.05);
  }

  .art-tile.wide { grid-column: span 2; }
  .art-tile.tall { grid-row: span 2; }

  .art-modal {
    display: none;
    position: fixed;
    z-index: 1001;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(10, 10, 10, 0.85);
    padding-top: 60px;
    text-align: center;
    animation: fadeIn 0.3s ease-in;
  }

  .art-modal img {
    max-width: 90%;
    max-height: 80vh;
    border-radius: 6px;
    margin-bottom: 1em;
  }

  .art-modal p {
    color: #ddd;
    font-size: 0.95rem;
    font-style: italic;
  }

  .close-btn {
    position: absolute;
    top: 1em;
    right: 1.5em;
    color: white;
    font-size: 2rem;
    cursor: pointer;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @media (max-width: 768px) {
  .art-row {
    flex-direction: column;
    gap: 1.5em;
    padding: 1em 1em 2em;
  }

  .art-container {
    flex: 1 1 100%;
    padding: 1em 1.25em;
    font-size: 0.98rem;
    line-height: 1.6;
  }

  .carousel-container {
    flex: 1 1 100%;
    padding: 0.5em 1em 1em;
  }

  .carousel-slide img {
    max-height: 260px;
  }

  .carousel-btn {
    font-size: 1.2rem;
    padding: 0.3em 0.5em;
  }

  .caption {
    font-size: 0.85rem;
  }
   .art-collage-grid {
    grid-template-columns: repeat(2, 1fr);
    grid-auto-rows: 80px;
    gap: 0.4em;
    padding: 0 0.5em;
  }

  .art-tile.wide {
    grid-column: span 2; /* No more spanning full width on small screens */
  }

  .art-tile.tall {
    grid-row: span 2;
  }
}

</style>


<script is:inline>
  let currentIndex = 0;

  function showSlide(index) {
    const track = document.querySelector('#carousel-track');
    if (track) {
      track.style.transform = `translateX(-${index * 100}%)`;
    }
  }

  window.plusSlides = function (n) {
    const slides = document.querySelectorAll('.carousel-slide');
    const totalSlides = slides.length;
    currentIndex = (currentIndex + n + totalSlides) % totalSlides;
    showSlide(currentIndex);
  };

  document.addEventListener("DOMContentLoaded", () => {
    showSlide(currentIndex); // Show initial slide

    // Auto-play
    setInterval(() => {
      window.plusSlides(1);
    }, 5000);

    // Modal logic for art collage
    document.querySelectorAll('.art-tile').forEach(tile => {
      tile.addEventListener('click', () => {
        const modal = document.getElementById('artModal');
        const modalImg = document.getElementById('modalImg');
        const modalCaption = document.getElementById('modalCaption');

        modalImg.src = tile.dataset.img;
        modalCaption.textContent = tile.dataset.caption;
        modal.style.display = 'block';
      });
    });

    window.closeModal = function () {
      document.getElementById('artModal').style.display = 'none';
    };
  });
</script>


</Layout>
